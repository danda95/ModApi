<!doctype html>
<html ng-app="app">
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular.js"></script>
    <script src="http://cdn.rawgit.com/angular-ui/bower-ui-grid/v3.0.6/ui-grid.min.js"></script>
    <link rel="stylesheet" href="http://cdn.rawgit.com/angular-ui/bower-ui-grid/v3.0.6/ui-grid.min.css" type="text/css" />

    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <script src="~/js/app.js"></script>
    <div ng-controller="MainCtrl">
        <div id="grid1" ui-grid="gridOptions" ui-grid-edit class="grid">
            <table>
                <tr>
                    <td>Name: </td>
                    <td><input type='text' id="textBoxName" ng-model="textBoxName" /></td>
                </tr>
                <tr>
                    <td>Species: </td>
                    <td><input type='text' id="textBoxSpecies" ng-model="textBoxSpecies" /></td>
                </tr>
                <tr>
                    <td>Number of legs: </td>
                    <td><input type='text' id="textBoxNumberOfLegs" ng-model="textBoxNumberOfLegs" /></td>
                </tr>
            </table>
            <button type="button" id="addData" class="btn btn-success" ng-click="addData(textBoxName,textBoxSpecies,textBoxNumberOfLegs)">Add Data</button>

        </div>
    </div>
    
</body>
</html>
